#!/bin/bash
#program to  serach for a given pattern in interactive mode
echo "enter the pattern to search \c : "
read  pname
echo "enter the file to use \c : "
read filename
echo "searching $pname in  $filename"
grep "$pname" $filename
echo "selected record shown"


