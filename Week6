#!/bin/bash
#Combination of 1 2 3
for i in 1 2 3
do
for j in 1 2 3
do 
for k in 1 2 3
do
echo $i $j $k
done 
done
done

bmsce@bmsce-OptiPlex-3060:~$ sh combination.sh
